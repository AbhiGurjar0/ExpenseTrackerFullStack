<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker - Daywise Transactions</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <style>
        :root {
            --primary: #4f46e5;
            --secondary: #3f37c9;
            --success: #4cc9f0;
            --danger: #f72585;
            --warning: #f8961e;
            --light: #f8f9fa;
            --dark: #4338ca;
            --gray: #6c757d;
            --light: #e9ecef;
        }
    </style>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#4f46e5',
                        'primary-dark': '#4338ca',
                        success: '#10b981',
                        danger: '#ef4444',
                        warning: '#f59e0b',
                        info: '#3b82f6'
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
    <div>
        <%- include('partials/navbar',{user:user}) %>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <!-- Page Header -->
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h2 class="text-2xl font-bold text-gray-800">Daywise Transactions</h2>
                <p class="text-gray-600">View and manage your daily financial activities</p>
            </div>
            <div class="mt-4 md:mt-0">
                <div class="flex items-center space-x-2 bg-white rounded-lg shadow-sm px-4 py-2">
                    <i class="fas fa-search text-gray-400"></i>
                    <input type="text" placeholder="Search transactions..." class="outline-none bg-transparent w-64">
                </div>
            </div>
        </div>

        <!-- Date Navigation Card -->
        <div class="bg-white rounded-xl shadow-sm p-6 mb-8">
            <div class="flex flex-col md:flex-row justify-between items-center">
                <div class="flex items-center space-x-4 mb-4 md:mb-0">
                    <button id="prev-day"
                        class="w-10 h-10 flex items-center justify-center rounded-full border border-gray-300 hover:bg-gray-100 transition">
                        <i class="fas fa-chevron-left text-gray-600"></i>
                    </button>

                    <div class="text-center">
                        <h3 id="current-date" class="text-xl font-bold text-gray-800">October 31, 2025</h3>
                        <p id="day-of-week" class="text-gray-500">Friday</p>
                    </div>

                    <button id="next-day"
                        class="w-10 h-10 flex items-center justify-center rounded-full border border-gray-300 hover:bg-gray-100 transition">
                        <i class="fas fa-chevron-right text-gray-600"></i>
                    </button>
                </div>

                <div class="flex items-center space-x-4">
                    <button id="today-btn"
                        class="px-4 py-2 bg-primary text-white rounded-lg hover:bg-primary-dark transition">
                        Today
                    </button>

                    <div class="relative">
                        <input type="text" id="date-picker"
                            class="w-48 px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent cursor-pointer"
                            placeholder="Select Date">
                        <i class="fas fa-calendar-alt absolute right-3 top-3 text-gray-400 pointer-events-none"></i>
                    </div>
                </div>
            </div>


        </div>

        <!-- Daily Summary -->
        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
            <div class="bg-white rounded-xl shadow-sm p-6">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-gray-500 text-sm">Total Income</p>
                        <h3 class="text-2xl font-bold text-success mt-1"> ₹<span id="totalIncome"></span></h3>
                    </div>
                    <div class="bg-green-100 text-success p-3 rounded-lg">
                        <i class="fas fa-arrow-up text-lg"></i>
                    </div>
                </div>

            </div>

            <div class="bg-white rounded-xl shadow-sm p-6">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-gray-500 text-sm">Total Expenses</p>
                        <h3 class="text-2xl font-bold text-danger mt-1">₹<span id="totalExpense"></span></h3>
                    </div>
                    <div class="bg-red-100 text-danger p-3 rounded-lg">
                        <i class="fas fa-arrow-down text-lg"></i>
                    </div>
                </div>

            </div>

            <div class="bg-white rounded-xl shadow-sm p-6">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-gray-500 text-sm">Net Amount</p>
                        <h3 class="text-2xl font-bold text-info mt-1">₹<span id="netAmount"></span></h3>
                    </div>
                    <div class="bg-blue-100 text-info p-3 rounded-lg">
                        <i class="fas fa-wallet text-lg"></i>
                    </div>
                </div>

            </div>

            <div class="bg-white rounded-xl shadow-sm p-6">
                <div class="flex justify-between items-start">
                    <div>
                        <p class="text-gray-500 text-sm">Transactions</p>
                        <h3 id="totalTransactions" class="text-2xl font-bold text-gray-800 mt-1">7</h3>
                    </div>
                    <div class="bg-purple-100 text-purple-600 p-3 rounded-lg">
                        <i class="fas fa-receipt text-lg"></i>
                    </div>
                </div>
                <p class="text-gray-600 text-sm mt-2 flex items-center">
                    <i class="fas fa-clock mr-1"></i> All day
                </p>
            </div>
        </div>

        <!-- Transactions List -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-800">Transactions for <span id="transactions-date">October
                        31, 2025</span></h3>

            </div>

            <!-- Time Segments -->
            <div class="divide-y divide-gray-100">
                <!-- Morning Section -->
                <div class="p-6">
                    <div class="flex items-center mb-4">
                        <div class="w-3 h-3 bg-orange-400 rounded-full mr-3"></div>
                        <h4 class="font-medium text-gray-700">Today</h4>


                    </div>

                    <div id="morning" class="space-y-4">




                    </div>
                </div>




            </div>

            <!-- Empty State (for demonstration) -->
            <div id="empty-state" class="hidden p-12 text-center">
                <i class="fas fa-receipt text-4xl text-gray-300 mb-4"></i>
                <h3 class="text-lg font-medium text-gray-700 mb-2">No transactions for this day</h3>
                <p class="text-gray-500 mb-6">You haven't recorded any transactions for this date.</p>

            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-12">
        <div class="container mx-auto px-4 py-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-lg font-semibold mb-4">ExpenseTracker</h3>
                    <p class="text-gray-400">Take control of your finances with our intuitive expense tracking app.</p>
                </div>
                <div>
                    <h4 class="text-md font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><a href="#" class="hover:text-white transition">Dashboard</a></li>
                        <li><a href="#" class="hover:text-white transition">Transactions</a></li>
                        <li><a href="#" class="hover:text-white transition">Budgets</a></li>
                        <li><a href="#" class="hover:text-white transition">Reports</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-md font-semibold mb-4">Resources</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><a href="#" class="hover:text-white transition">Help Center</a></li>
                        <li><a href="#" class="hover:text-white transition">Financial Tips</a></li>
                        <li><a href="#" class="hover:text-white transition">Privacy Policy</a></li>
                        <li><a href="#" class="hover:text-white transition">Terms of Service</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-md font-semibold mb-4">Get the App</h4>
                    <div class="flex flex-col space-y-2">
                        <button
                            class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition flex items-center justify-center">
                            <i class="fab fa-apple mr-2"></i> App Store
                        </button>
                        <button
                            class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition flex items-center justify-center">
                            <i class="fab fa-google-play mr-2"></i> Google Play
                        </button>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-6 text-center text-gray-400">
                <p>&copy; 2023 ExpenseTracker. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize date picker
            const datePicker = flatpickr("#date-picker", {
                dateFormat: "Y-m-d",
                defaultDate: "2025-10-31",
                onChange: function (selectedDates, dateStr, instance) {
                    if (dateStr) {
                        updateDisplayedDate(new Date(dateStr));
                    }
                }
            });

            // Set initial date
            let currentDate = new Date();
            updateDisplayedDate(currentDate);

            // Previous day button
            document.getElementById('prev-day').addEventListener('click', function () {
                currentDate.setDate(currentDate.getDate() - 1);
                updateDisplayedDate(currentDate);
                datePicker.setDate(currentDate);
            });

            // Next day button
            document.getElementById('next-day').addEventListener('click', function () {
                currentDate.setDate(currentDate.getDate() + 1);
                updateDisplayedDate(currentDate);
                datePicker.setDate(currentDate);
            });

            // Today button
            document.getElementById('today-btn').addEventListener('click', function () {
                currentDate = new Date();
                updateDisplayedDate(currentDate);
                datePicker.setDate(currentDate);
            });



            // Function to update displayed date
            function updateDisplayedDate(date) {
                const options = { year: 'numeric', month: 'long', day: 'numeric' };
                const dayOptions = { weekday: 'long' };

                document.getElementById('current-date').textContent = date.toLocaleDateString('en-US', options);
                document.getElementById('day-of-week').textContent = date.toLocaleDateString('en-US', dayOptions);
                document.getElementById('transactions-date').textContent = date.toLocaleDateString('en-US', options);

                // For demonstration, show/hide empty state based on date
                // In a real app, you would fetch transactions for the selected date
                const emptyState = document.getElementById('empty-state');
                const transactionsList = document.querySelector('.divide-y');
                console.log(date.toDateString());
                fetch('/api/transactions', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ date: date.toDateString() }),
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.transactions && data.transactions.length > 0) {
                            emptyState.classList.add('hidden');
                            transactionsList.classList.remove('hidden')
                            let trans = data.transactions;
                            const morningDiv = document.getElementById('morning');
                           
                            morningDiv.innerHTML = '';
                           

                            trans.forEach(t => {
                                const date = new Date(t.date);
                                const time = date.toLocaleTimeString();



                                morningDiv.innerHTML += `
                                      <div
                            class="trans flex items-center justify-between p-4 bg-gray-50 rounded-lg hover:bg-gray-100 transition">
                            <div class="flex items-center">
                                <div
                                    class="flex-shrink-0 h-12 w-12 bg-blue-100 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-film text-blue-600"></i>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900">${t.category}</div>
                                    <div class="text-sm text-gray-500">${t.title}</div>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-sm font-medium text-blue-500">₹${t.amount}</div>
                                <div class="text-sm text-gray-500">${time}</div>
                            </div>
                        </div>
                                   
                                    `
                            });


                        } else {
                            emptyState.classList.remove('hidden');
                            transactionsList.classList.add('hidden');
                        }
                        document.getElementById('totalIncome').innerHTML = data.totalIncome;
                        document.getElementById('totalExpense').innerHTML = data.totalExpense;
                        document.getElementById('netAmount').innerHTML = data.netAmount;
                        document.getElementById('totalTransactions').innerHTML = data.transLength;
                    })
                    .catch(error => {
                        console.error('Error fetching transactions:', error);
                        emptyState.classList.remove('hidden');
                        // transactionsList.classList.add('hidden');
                    });



            }

            // Search functionality
            const searchInput = document.querySelector('input[type="text"]');
            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                const transactions = document.querySelectorAll('.trans');

                transactions.forEach(transaction => {
                    const text = transaction.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        transaction.style.display = 'flex';
                    } else {
                        transaction.style.display = 'none';
                    }
                });
            });
        });
    </script>
</body>

</html>