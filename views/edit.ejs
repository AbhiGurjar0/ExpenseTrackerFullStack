<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Transaction</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>

<body class="bg-gradient-to-br from-blue-50 to-indigo-100 min-h-screen py-8 px-4">
    <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <div class="text-center mb-10">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Edit Transaction</h1>
            <p class="text-gray-600">Update your financial transaction details</p>
        </div>

        <!-- Form Container -->
        <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
            <div class="p-8">
                <form id="editForm" method="post" action="/update/<%=transaction._id%>">
                    <!-- Amount Field -->
                    <div class="mb-8">
                        <label for="amount" class="block text-sm font-medium text-gray-700 mb-2">Amount</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                                <i class="fas fa-dollar-sign"></i>
                            </span>
                            <input type="text" id="amount" name="amount" value="<%=transaction.amount%>" class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2
                            focus:ring-blue-500 focus:border-blue-500 transition-all duration-200"
                                placeholder="Enter amount">
                        </div>
                        <p class="mt-2 text-sm text-gray-500">Enter the transaction amount</p>
                    </div>

                    <!-- Title Field -->
                    <div class="mb-8">
                        <label for="title" class="block text-sm font-medium text-gray-700 mb-2">Title</label>
                        <input type="text" id="title" name="title" value="<%=transaction.title%>"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200"
                            placeholder="Enter transaction title">
                        <p class="mt-2 text-sm text-gray-500">Give your transaction a descriptive title</p>
                    </div>

                    <!-- Date Field -->
                    <div class="mb-8">
                        <label for="date" class="block text-sm font-medium text-gray-700 mb-2">Date</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                                <i class="fas fa-calendar-alt"></i>
                            </span>
                            <input type="datetime-local" id="date" name="date"
                                value="<%=transaction.date.toISOString().slice(0,16)%>"
                                class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200">
                        </div>
                        <p class="mt-2 text-sm text-gray-500">Select the date and time of the transaction</p>
                    </div>

                    <!-- Type Field -->
                    <div class="mb-8">
                        <label for="type" class="block text-sm font-medium text-gray-700 mb-2">Type</label>
                        <div class="relative">
                            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">
                                <i class="fas fa-exchange-alt"></i>
                            </span>
                            <select id="type" name="type"
                                class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 appearance-none">
                                <option selected value="income">Income</option>
                                <option value="expense">Expense</option>

                            </select>
                            <span
                                class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-500 pointer-events-none">
                                <i class="fas fa-chevron-down"></i>
                            </span>
                        </div>
                        <p class="mt-2 text-sm text-gray-500">Select the transaction type</p>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-col sm:flex-row gap-4 pt-4">
                        <button type="submit"
                            class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-4 rounded-lg transition-all duration-200 flex items-center justify-center gap-2">
                            <i class="fas fa-save"></i>
                            Save Changes
                        </button>
                        <button type="button"
                            class="flex-1 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-3 px-4 rounded-lg transition-all duration-200 flex items-center justify-center gap-2">
                            <i class="fas fa-times"></i>
                            Cancel
                        </button>
                    </div>
                </form>
            </div>

            <!-- Preview Section -->
            <div class="bg-gray-50 border-t border-gray-200 p-8">
                <h2 class="text-lg font-semibold text-gray-800 mb-4">Transaction Preview</h2>
                <div class="bg-white rounded-lg border border-gray-200 p-4">
                    <div class="flex justify-between items-start mb-3">
                        <div>
                            <h3 class="font-medium text-gray-800" id="previewTitle">Stock</h3>
                            <p class="text-sm text-gray-500" id="previewDate">Oct 20, 2025</p>
                        </div>
                        <div class="text-right">
                            <p class="font-semibold text-green-600" id="previewAmount">$500,000</p>
                            <span
                                class="inline-block px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full"
                                id="previewType">Income</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer Note -->
        <div class="text-center mt-8 text-gray-500 text-sm">
            <p>All fields are required. Changes will be saved immediately.</p>
        </div>
    </div>

    <script>
        // Update preview when form fields change
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('editForm');
            const previewTitle = document.getElementById('previewTitle');
            const previewAmount = document.getElementById('previewAmount');
            const previewDate = document.getElementById('previewDate');
            const previewType = document.getElementById('previewType');

            // Format date for preview
            function formatDate(dateString) {
                const date = new Date(dateString);
                return date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'short',
                    day: 'numeric'
                });
            }

            // Format amount for preview
            function formatAmount(amount) {
                return '$' + parseInt(amount).toLocaleString('en-US');
            }

            // Update preview when form changes
            form.addEventListener('input', function () {
                previewTitle.textContent = document.getElementById('title').value || 'Stock';
                previewAmount.textContent = formatAmount(document.getElementById('amount').value) || '$500,000';
                previewDate.textContent = formatDate(document.getElementById('date').value) || 'Oct 20, 2025';

                const type = document.getElementById('type').value;
                previewType.textContent = type.charAt(0).toUpperCase() + type.slice(1);

                // Update type badge color
                if (type === 'income') {
                    previewType.className = 'inline-block px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full';
                } else if (type === 'expense') {
                    previewType.className = 'inline-block px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full';
                } else {
                    previewType.className = 'inline-block px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full';
                }
            });

            // Initialize preview with default values
            previewDate.textContent = formatDate(document.getElementById('date').value);
            previewAmount.textContent = formatAmount(document.getElementById('amount').value);
        });
    </script>
</body>

</html>