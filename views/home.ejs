                        previewAmount.className = 'font-semibold text-green-600';
                    } else if (type === 'expense') {
                        previewType.classList.add('type-badge-expense');
                        previewAmount.className = 'font-semibold text-red-600';
                    } else {
                        previewType.classList.add('type-badge-transfer');
                        previewAmount.className = 'font-semibold text-blue-600';
                    }
                } else {
                    previewType.textContent = '-';
                    previewType.className = 'inline-block px-2 py-1 text-xs font-medium rounded-full bg-gray-100 text-gray-800';
