                        <h3 class="text-xl font-bold">â‚¹<%= totalExpense %>
                        </h3>
                    </div>
                    <button data-type="expense" onclick="openInputBox(this)"
                        class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-full transition-colors duration-200">+</button>

                </div>


            </div>

            <%if(user?.isPremium){ %>
                <div class=" w-full mx-auto p-6 bg-white rounded-2xl shadow-xl">
                    <h1 class="text-3xl font-bold text-gray-800 mb-2 text-center">Premium Membership</h1>
                    <p class="text-gray-600 text-center mb-8">Unlock exclusive features with our premium plan</p>


                    <div
                        class="premium-badge flex items-center justify-center gap-3 bg-gradient-to-r from-yellow-100 to-yellow-200 px-6 py-4 rounded-2xl shadow-md border border-yellow-300 mb-8 mx-auto max-w-md">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7 text-yellow-500" fill="currentColor"
                            viewBox="0 0 24 24">
                            <path
                                d="M12 .587l3.668 7.435L24 9.423l-6 5.851L19.335 24 12 19.897 4.665 24 6 15.274 0 9.423l8.332-1.401z" />
                        </svg>
                        <span class="font-semibold text-yellow-700 text-lg">Premium Member</span>
                        <span class="ml-auto text-sm bg-yellow-500 text-white px-2 py-1 rounded-full">Active</span>
                    </div>



                    <div class="flex flex-col sm:flex-row gap-4 justify-center">
                        <a href="/dailyReport"
                            class="btn tooltip flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-blue-500 text-white font-semibold shadow-lg hover:bg-blue-600"
                            data-tooltip="View your daily expenses">
                            <i class="fas fa-calendar-day"></i> Daily Expense
                        </a>

                        <a href="/report"
                            class="btn tooltip flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-green-500 text-white font-semibold shadow-lg hover:bg-green-600"
                            data-tooltip="See comprehensive reports">
                            <i class="fas fa-chart-pie"></i> Full Report
                        </a>

                        <a href="/download-report"
                            class="btn tooltip flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-purple-500 text-white font-semibold shadow-lg hover:bg-purple-600"
                            data-tooltip="Download your reports">
                            <i class="fas fa-download"></i> Download
                        </a>
                        <a href="/leaderboard"
                            class="btn tooltip flex items-center justify-center gap-2 px-6 py-3 rounded-xl bg-purple-500 text-white font-semibold shadow-lg hover:bg-purple-600"
                            data-tooltip="Download your reports">
                            <i class="fas fa-download"></i> Learderboard
                        </a>
                    </div>



                </div>
                <%}%>



        </div>
    </div>

    <div id="inputBox" class="hidden fixed inset-0 bg-black/50 flex items-center justify-center z-50">
        <div class="bg-white p-6 rounded-lg shadow-lg w-[300px]">
            <h2 class="text-lg font-semibold mb-4">Add Entry</h2>
            <form action="/add" method="post" class="space-y-3">
                <input type="hidden" id="val" name="val" value="">
                <input type="text" placeholder="Enter title" name="title" class="w-full border px-3 py-2 rounded"
                    required>
                <input type="number" placeholder="Enter amount" name="amount" class="w-full border px-3 py-2 rounded"
                    required>
                <div class="flex justify-end space-x-2">
                    <button type="button" onclick="closeInputBox()"
                        class="px-3 py-1 bg-gray-200 rounded hover:bg-gray-300">Cancel</button>
                    <button type="submit"
                        class="px-3 py-1 bg-green-500 text-white rounded hover:bg-green-600">Add</button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function openInputBox(button) {
            document.getElementById('inputBox').classList.remove('hidden');
            document.getElementById('val').value = button.getAttribute('data-type');
        }
        function closeInputBox() {
            document.getElementById('inputBox').classList.add('hidden');
        }
        async function deleteItem(id) {
            await fetch("/delete", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify({ id })
            })
        }
        const cashfree = Cashfree({
            mode: "sandbox",
        });
        document.getElementById("renderBtn").addEventListener("click", async () => {

            const response = await fetch("http://localhost:3000/pay", {
                method: "POST",
            });


            const data = await response.json();
            const paymentSessionId = data.paymentSessionId;
            let checkoutOptions = {
                paymentSessionId: paymentSessionId,
                redirectTarget: "_self",
            };
            await cashfree.checkout(checkoutOptions);
        });

    </script>
</body>

</html>