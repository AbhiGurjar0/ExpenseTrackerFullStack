<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Day to Day Expenses</title>
</head>

<body class="bg-gray-50 text-gray-800">

    <div class="container mx-auto mt-10 px-4">
        <h1 class="text-3xl font-extrabold text-center mb-10 text-gray-900 tracking-wide">
            Expenses & Income Report
        </h1>

    
        <div class="bg-white shadow-lg rounded-2xl p-6 mb-10">
            <h3 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2">Monthly Report</h3>

            <div class="overflow-x-auto">
                <table class="min-w-full text-sm text-left border border-gray-200 rounded-lg overflow-hidden">
                    <thead class="bg-blue-500 text-white">
                        <tr>
                            <th class="px-6 py-3">Date</th>
                            <th class="px-6 py-3">Description</th>
                            <th class="px-6 py-3">Category</th>
                            <th class="px-6 py-3">Income</th>
                            <th class="px-6 py-3">Expense</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% daywiseExp.forEach(expense=> { %>
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-3"><%= expense.date?.toLocaleDateString() %></td>
                            <td class="px-6 py-3"><%= expense.title %></td>
                            <td class="px-6 py-3 text-red-500 font-semibold">Expense</td>
                            <td class="px-6 py-3 text-gray-400">0.00</td>
                            <td class="px-6 py-3 text-red-600 font-bold"><%= expense.amount %></td>
                        </tr>
                        <% }); %>
                        <% daywiseIncome.forEach(income=> { %>
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-3"><%= income.date?.toLocaleDateString() %></td>
                            <td class="px-6 py-3"><%= income.title %></td>
                            <td class="px-6 py-3 text-green-500 font-semibold">Income</td>
                            <td class="px-6 py-3 text-green-600 font-bold"><%= income.amount %></td>
                            <td class="px-6 py-3 text-gray-400">0.00</td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="bg-white shadow-lg rounded-2xl p-6">
            <h3 class="text-xl font-semibold text-gray-700 mb-4 border-b pb-2">Yearly Report</h3>

            <div class="overflow-x-auto">
                <table class="min-w-full text-sm text-left border border-gray-200 rounded-lg overflow-hidden">
                    <thead class="bg-green-500 text-white">
                        <tr>
                            <th class="px-6 py-3">Month</th>
                            <th class="px-6 py-3">Income</th>
                            <th class="px-6 py-3">Expense</th>
                            <th class="px-6 py-3">Savings</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                        <% monthlyReport.forEach((exp)=> { %>
                        <tr class="hover:bg-gray-50 transition">
                            <td class="px-6 py-3 font-medium"><%= exp.month %></td>
                            <td class="px-6 py-3 text-green-600 font-bold"><%= exp.income %></td>
                            <td class="px-6 py-3 text-red-600 font-bold"><%= exp.expense %></td>
                            <td class="px-6 py-3 text-blue-600 font-bold"><%= exp.savings %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="flex justify-center mt-8">
            <a href="/download-report">
                <button
                    class="bg-gradient-to-r from-blue-500 to-blue-700 hover:from-blue-600 hover:to-blue-800 text-white font-semibold px-6 py-3 rounded-xl shadow-md hover:shadow-lg transition">
                    â¬‡ Download Report
                </button>
            </a>
        </div>
    </div>

</body>

</html>
