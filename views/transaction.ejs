<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker - Transactions</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#4f46e5',
                        'primary-dark': '#4338ca',
                        success: '#10b981',
                        danger: '#ef4444',
                        warning: '#f59e0b'
                    }
                }
            }
        }
    </script>
</head>

<body class="bg-gray-50 min-h-screen">
    <!-- Header -->
  <div>
        <%- include('partials/navbar',{user:""}) %>
       </div>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
            <div>
                <h2 class="text-2xl font-bold text-gray-800">Transactions</h2>
                <p class="text-gray-600">View and manage all your financial transactions</p>
            </div>
            <div class="mt-4 md:mt-0">
                <div class="flex items-center space-x-2 bg-white rounded-lg shadow-sm px-4 py-2">
                    <i class="fas fa-search text-gray-400"></i>
                    <input type="text" placeholder="Search transactions..." class="outline-none bg-transparent w-64">
                </div>
            </div>
        </div>

        <!-- Filters Section -->
        <div class="bg-white rounded-xl shadow-sm p-6 mb-8">
            <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6">
                <h3 class="text-lg font-semibold text-gray-800 mb-4 md:mb-0">Filter Transactions</h3>
                <button onclick="resetFilter(this ,'filterForm')"
                    class="text-primary hover:text-primary-dark flex items-center">
                    <i class="fas fa-redo-alt mr-2"></i> Reset Filters
                </button>
            </div>

            <form id="filterForm" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 items-end">

                <!-- Date Filter -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Date Range</label>
                    <select name="dateRange"
                        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                        <option value="all">All Time</option>
                        <option value="today">Today</option>
                        <option value="this_week">This Week</option>
                        <option value="this_month">This Month</option>
                        <option value="this_year">This Year</option>
                        <option value="custom">Custom Range</option>
                    </select>
                </div>

                <!-- Transaction Type Filter -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Transaction Type</label>
                    <select name="transactionType"
                        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                        <option value="all">All Transactions</option>
                        <option value="income">Income</option>
                        <option value="expense">Expense</option>
                        <option value="transfer">Transfer</option>
                    </select>
                </div>

                <!-- Category Filter -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Category</label>
                    <select name="category"
                        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                        <option value="all">All Categories</option>
                        <option value="food_dining">Food & Dining</option>
                        <option value="shopping">Shopping</option>
                        <option value="transportation">Transportation</option>
                        <option value="entertainment">Entertainment</option>
                        <option value="bills_utilities">Bills & Utilities</option>
                        <option value="healthcare">Healthcare</option>
                    </select>
                </div>

                <!-- Amount Filter -->
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">Amount Range</label>
                    <select name="amountRange"
                        class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent">
                        <option value="any">Any Amount</option>
                        <option value="0_50">Under $50</option>
                        <option value="50_100">$50 - $100</option>
                        <option value="100_500">$100 - $500</option>
                        <option value="500_10000000">Over $500</option>
                    </select>
                </div>

                <!-- Buttons -->
                <div class="flex flex-col sm:flex-row gap-3 justify-center md:justify-end">
                    <button type="submit"
                        class="w-full sm:w-auto px-6 py-2 text-white bg-primary hover:bg-primary-dark rounded-full transition-all">
                        Apply
                    </button>

                </div>
            </form>



        </div>



        <!-- Transactions Table -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
                <h3 class="text-lg font-semibold text-gray-800">Recent Transactions</h3>
                <div class="flex space-x-2">
                    <button
                        class="bg-gray-100 hover:bg-gray-200 text-gray-700 px-3 py-1 rounded-lg text-sm transition flex items-center">
                        <i class="fas fa-download mr-2"></i> Export
                    </button>
                    <button
                        class="bg-primary hover:bg-primary-dark text-white px-3 py-1 rounded-lg text-sm transition flex items-center">
                        <i class="fas fa-print mr-2"></i> Print
                    </button>
                </div>
            </div>

            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Description</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Category</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Date</th>

                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Amount</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Actions</th>
                        </tr>
                    </thead>
                    <tbody id="transactions" class="bg-white divide-y divide-gray-200">
                        <!-- Transaction 1 -->
                        <%transactions?.forEach((trans)=>{%>
                            <tr class="hover:bg-gray-50 transition"></tr>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center">
                                    <div
                                        class="flex-shrink-0 h-10 w-10 bg-green-100 rounded-lg flex items-center justify-center">
                                        <i class="fas fa-shopping-bag text-success"></i>
                                    </div>
                                    <div class="ml-4">
                                        <div class="text-sm font-medium text-gray-900">
                                            <%=trans.title%>
                                        </div>
                                        <div class="text-sm text-gray-500">
                                            <%=trans.desc%>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">
                                    <%=trans.category%>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="text-sm text-gray-900">
                                    <%=trans.date%>
                                </div>
                                <div class="text-sm text-gray-500">10:24 AM</div>
                            </td>

                            <td class="px-6 py-4 whitespace-nowrap">
                                <%if(trans.type=='expense'){%>
                                    <div class="text-sm font-medium text-danger">-$<%=trans.amount%>
                                    </div>

                                    <% } else{%>
                                        <div class="text-sm font-medium text-success">+$<%=trans.amount%>
                                        </div>
                                        <% }%>

                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                <div class="flex space-x-2">
                                    <button class="text-primary hover:text-primary-dark">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="text-danger hover:text-red-700">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                    <button class="text-gray-500 hover:text-gray-700">
                                        <i class="fas fa-flag"></i>
                                    </button>
                                </div>
                            </td>
                            </tr>

                            <% })%>
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="px-6 py-4 border-t border-gray-200 flex items-center justify-between">
                <div class="text-sm text-gray-700">
                    Showing <span id="pageNumber" class="font-medium">1</span> to <span id="totalPages"
                        class="font-medium">5</span> of <span id="transaction_length" class="font-medium">0</span>
                    transactions
                </div>
                <div class="text-sm text-gray-700">
                    <select name="pageLimit" id="pageLimit">
                        <option value="5">5</option>
                        <option value="10" selected>10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>

                    </select>

                </div>
                <div class="flex space-x-2">

                    <div id="pages" class="flex space-x-2">
                        <button
                            class="px-3 py-1 rounded-lg bg-primary text-white hover:bg-primary-dark transition">1</button>

                    </div>


                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white mt-12">
        <div class="container mx-auto px-4 py-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <div>
                    <h3 class="text-lg font-semibold mb-4">ExpenseTracker</h3>
                    <p class="text-gray-400">Take control of your finances with our intuitive expense tracking app.</p>
                </div>
                <div>
                    <h4 class="text-md font-semibold mb-4">Quick Links</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><a href="#" class="hover:text-white transition">Dashboard</a></li>
                        <li><a href="#" class="hover:text-white transition">Transactions</a></li>
                        <li><a href="#" class="hover:text-white transition">Budgets</a></li>
                        <li><a href="#" class="hover:text-white transition">Reports</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-md font-semibold mb-4">Resources</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><a href="#" class="hover:text-white transition">Help Center</a></li>
                        <li><a href="#" class="hover:text-white transition">Financial Tips</a></li>
                        <li><a href="#" class="hover:text-white transition">Privacy Policy</a></li>
                        <li><a href="#" class="hover:text-white transition">Terms of Service</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="text-md font-semibold mb-4">Get the App</h4>
                    <div class="flex space-x-2">
                        <button
                            class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition flex items-center">
                            <i class="fab fa-apple mr-2"></i> App Store
                        </button>
                        <button
                            class="bg-gray-700 hover:bg-gray-600 text-white px-4 py-2 rounded-lg transition flex items-center">
                            <i class="fab fa-google-play mr-2"></i> Google Play
                        </button>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-6 text-center text-gray-400">
                <p>&copy; 2023 ExpenseTracker. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>

        // reset filter
        function resetFilter(ele, id) {
            document.getElementById(id).reset();
        }

        //handle Filter

        let CurrentPage = 1;
        document.addEventListener('DOMContentLoaded', function () {

            const form = document.getElementById("filterForm");
            const PageLimit = document.getElementById("pageLimit");
            const paginationDiv = document.getElementById("pages");

            async function fetchResults(filters = defaultFilters, page = [1, PageLimit.value]) {
                currentPage = page[0];
                // event.preventDefault();
                // const formData = new FormData(form);
                // const filters = Object.fromEntries(formData.entries());
                // console.log("Applied Filters:", filters);
                let data = await fetch('/filter', {
                    method: "POST",
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ filters, page }),
                })
                res = await data.json();
                console.log(data)
                document.getElementById('transactions').innerHTML = "";
                res?.data?.forEach((trans) => {
                    // document.getElementById('transactions').innerHTML += `
                    const tr = document.createElement('tr');
                    tr.className = "hover:bg-gray-50 transition";
                    tr.innerHTML = `
                        <td class="px-6 py-4 whitespace-nowrap">
                            <div class="flex items-center">
                                <div class="flex-shrink-0 h-10 w-10 bg-green-100 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-shopping-bag text-success"></i>
                                </div>
                                <div class="ml-4">
                                    <div class="text-sm font-medium text-gray-900">
                                        ${trans.title}
                                    </div>
                                    <div class="text-sm text-gray-500">
                                        ${trans.desc}
                                    </div>
                                </div>
                            </div>
        </td >
        <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900">
                ${trans.category}
            </div>
        </td>
        <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm text-gray-900">
                ${trans.date}
            </div>
            <div class="text-sm text-gray-500">10:24 AM</div>
        </td>
        <td class="px-6 py-4 whitespace-nowrap">
            <div class="text-sm font-medium ${trans.type === 'expense' ? 'text-danger' : 'text-success'}">
                ${trans.type === 'expense' ? '-' : '+'}$${trans.amount}
            </div>
        </td>
        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
            <div class="flex space-x-2">
                <button class="editBtn text-primary hover:text-primary-dark">
                    <i class="fas fa-edit"></i>
                </button>
                <button class="deleteBtn text-danger hover:text-red-700">
                    <i class="fas fa-trash"></i>
                </button>
                <button class="text-gray-500 hover:text-gray-700">
                    <i class="fas fa-flag"></i>
                </button>
            </div>
        </td>
                    `;


                    tr.querySelector('.editBtn').addEventListener('click', () => {
                        console.log('edit clicked', trans._id);
                        edit(trans._id.toString())
                    });

                    tr.querySelector('.deleteBtn').addEventListener('click', () => {
                        deleteTransaction(trans._id)
                    });



                    document.getElementById('transactions').appendChild(tr);


                });
                // document.querySelectorAll('.editBtn').forEach((btn) => {
                //     btn.addEventListener('click', (e) => {
                //         let id = e.target;
                //         edit(e.target, id);
                //     });

                // });
                console.log(data);
                //total transactions 

                document.getElementById('transaction_length').innerText = res?.count || 0;


                let pageCountOnPage = 10;
                let pages = document.getElementById('pages');
                let pageLength = Math.ceil(Number(Number(res?.count) / Number(PageLimit.value)));
                pages.innerHTML = '';
                console.log(pageLength)

                const prev = document.createElement("button");
                prev.textContent = "Prev";
                prev.disabled = currentPage === 1;
                prev.className = "px-3 py-1 rounded-lg bg-primary-dark text-white hover:bg-primary-dark transition";
                prev.addEventListener("click", () => {
                    if (currentPage > 1) fetchResults(defaultFilters, [currentPage - 1, pageLimit.value]);
                });
                paginationDiv.appendChild(prev);

                for (let i = 0; i < pageLength; i++) {

                    const btn = document.createElement("button");
                    btn.textContent = i + 1;
                    btn.className = "px-3 py-1 rounded-lg bg-primary text-white hover:bg-primary-dark transition";

                    btn.addEventListener("click", () => {
                        fetchResults(filters, [i + 1, pageLimit.value]);
                    });

                    pages.appendChild(btn);

                }
                const next = document.createElement("button");
                next.textContent = "Next";
                next.disabled = currentPage === pageLength;
                next.addEventListener("click", () => {
                    if (currentPage < pageLength) fetchResults(defaultFilters, [currentPage + 1, pageLimit.value]);
                });
                next.className = "px-3 py-1 rounded-lg bg-primary-dark text-white hover:bg-primary-dark transition";
                paginationDiv.appendChild(next);

                //total pages and current page
                document.getElementById('pageNumber').innerText = currentPage;
                document.getElementById('totalPages').innerText = pageLength;

            }



            form.addEventListener("submit", (e) => {
                e.preventDefault();
                const formData = new FormData(form);
                const filters = Object.fromEntries(formData.entries());

                fetchResults(filters);
            });


            const defaultFilters = Object.fromEntries(new FormData(form).entries());
            fetchResults(defaultFilters);
            // Simple search functionality
            const searchInput = document.querySelector('input[type="text"]');
            searchInput.addEventListener('input', function () {
                const searchTerm = this.value.toLowerCase();
                const rows = document.querySelectorAll('tbody tr');

                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    if (text.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });


        function edit(id) {
            console.log('Editing transaction with ID:', id);
            window.location.href = `/edit/${id}`;
        }
        function deleteTransaction(id) {
            console.log('Deleting transaction with ID:', id);
            // Implement delete functionality here
            fetch(`/delete/${id}`, {
                method: 'POST',
                headers:{
                    'Content-Type':'application/json'
                }
            }).then(response => {
                if (response.ok) {
                    alert('Transaction deleted successfully');
                    location.reload();
                } else {
                    alert('Failed to delete transaction');
                }
            });
        }


    </script>
</body>

</html>